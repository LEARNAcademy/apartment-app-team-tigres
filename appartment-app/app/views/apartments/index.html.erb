<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Apartment</th>
      <th>Listing name</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>Zip code</th>
      <th>State</th>
      <th>Management company</th>
      <th>Management company phone</th>
      <th>Opening time</th>
      <th>Closing time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.apartment_id %></td>
        <td><%= apartment.listing_name %></td>
        <td><%= apartment.address_1 %></td>
        <td><%= apartment.address_2 %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.zip_code %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.management_company %></td>
        <td><%= apartment.management_company_phone %></td>
        <td><%= apartment.opening_time %></td>
        <td><%= apartment.closing_time %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

